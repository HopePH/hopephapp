<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Yol.Punla.Views.QuestionnairePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customControl="clr-namespace:Yol.Punla.CustomControls;assembly=Yol.Punla"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    prism:ViewModelLocator.AutowireViewModel="True">
    <ScrollView
        Padding="40"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">
        <FlexLayout Direction="Column">
            <customControl:MuseoLabel
                Grid.Row="0"
                FontAttributes="Bold"
                FontSize="40"
                Text="{Binding Question}"
                TextColor="{StaticResource ColorGreenDimB}" />
            <FlexLayout BackgroundColor="Yellow" FlexLayout.Grow="1" />
            <Button
                BackgroundColor="#FF7ED321"
                BorderRadius="4"
                FlexLayout.AlignSelf="Center"
                FontAttributes="Bold"
                FontSize="14"
                Text="Next"
                TextColor="White"
                WidthRequest="104" />
        </FlexLayout>
    </ScrollView>
</ContentPage>