        <ContentView
            Grid.Column="1"
            HorizontalOptions="Start"
            VerticalOptions="End">
            <ContentView.Padding>
                <OnPlatform
                    x:TypeArguments="Thickness"
                    Android="0,14,0,0"
                    iOS="0,21,0,0" />
            </ContentView.Padding>
            <ContentView.HeightRequest>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS" Value="48" />
                    <On Platform="Android" Value="54" />
                </OnPlatform>
            </ContentView.HeightRequest>
            <customControl:MuseoLabel
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Style="{StaticResource LabelDefault}"
                Text="{Binding Title}" />
        </ContentView>

        <ContentView
            Grid.Column="2"
            HorizontalOptions="End"
            IsEnabled="false"
            IsVisible="false"
            VerticalOptions="End"
            WidthRequest="20">
            <ContentView.Padding>
                <OnPlatform
                    x:TypeArguments="Thickness"
                    Android="0,13,20,0"
                    iOS="20,15,20,0" />
            </ContentView.Padding>
            <ContentView.HeightRequest>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS" Value="48" />
                    <On Platform="Android" Value="54" />
                </OnPlatform>
            </ContentView.HeightRequest>
            <Label
                FontFamily="FontAwesome"
                IsVisible="false"
                Text="{StaticResource fa-home}"
                TextColor="White">
                <Label.FontSize>
                    <OnPlatform
                        x:TypeArguments="x:Double"
                        Android="23"
                        iOS="24" />
                </Label.FontSize>
            </Label>
            <ContentView.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToHomePage}" NumberOfTapsRequired="1" />
            </ContentView.GestureRecognizers>
        </ContentView>
    </Grid>
</ContentView>